{
  "name": "@nolet7/Solar System",
  "version": "6.7.6",
  "description": "An API to explore planetary data in our solar system.",
  "author": "Siddharth Barahalikar <barahalikar.siddharth@gmail.com>",
  "homepage": "https://www.linkedin.com/in/barahalikar-siddharth/",
  "license": "MIT",
  "scripts": {
    "start": "node app.js",
    "seed": "node seed.js",
    "test": "mocha app-test.js --timeout 10000 --reporter mocha-junit-reporter --exit",
    "coverage": "nyc --reporter=cobertura --reporter=lcov --reporter=text --reporter=json-summary mocha app-test.js --timeout 10000 --exit"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 60,
    "report-dir": "./coverage",
    "include": ["*.js"],
    "exclude": ["seed.js"]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "mongoose": "5.13.20",
    "mocha-junit-reporter": "^2.2.1"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "chai-http": "^4.4.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0"
  }
}
